#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "goodheart"

DEFAULT_NS = "user"

ns = DEFAULT_NS
rt = Clojure::Runtime.new
rt.read(ns, "(ns user)")

loop do
  print "\n#{ns} => "
  line = gets
  if %w[exit quit].include? line.strip
    puts "Bye for now!"
    break
  else
    result = rt.read("user", line)
    puts result
  end
end
